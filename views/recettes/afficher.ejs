<h1><%= recette.title %></h1>
<img src="<%= recette.coverImagePath %>" alt="Photo de la recette <%= recette.title %>">
<div>Ingrédient principal: <%= recette.ingredient.name %></div>
<div><%= recette.category %></div>
<div>
    <% switch (recette.difficultyCount) {
        case 0: %> 
            Très facile
        <%  break;
        case 1: %> 
            Facile
        <%  break;
        case 2: %> 
            Niveau moyen
        <%  break;
        case 3: %> 
            Difficile
        <%  break;
        default: %> 
          Niveau inconnu
    <%  } %>
</div>
<div>Temps total: <%= recette.timeCount %> min</div>
<div>Personnes: <%= recette.personCount %></div>
<div>
    <h3>Ingrédients</h3>
    <p><%= recette.listIngredients %></p>
</div>
<div>
    <h3>Préparation</h3>
    <p><%= recette.steps %></p>
</div>

<a href="/recettes/<%= recette.id %>/editer">Editer</a>
<div>
    Pour en savoir plus sur l'ingrédient principal de cette recette:
    <a href="/ingredients/<%= recette.ingredient.id %>">Voir la fiche <%= recette.ingredient.name %></a>
</div>
<%- include('../partials/delete_form.ejs', { url: `/recettes/${recette.id}` }) %>