<header>
    <div class="has-thin-border-bottom">
        <div class="container container--full">
            <nav class="actions-nav" aria-label="navigation actions">
                <ul class="actions-nav_container">
                    <% if (locals.isLogged) {  %>
                        <li class="<%= locals.pageName === 'dashboard' ? 'is-active ' : '' %>actions-nav_item actions-nav_dashboard">
                            <a href="/dashboard" <%= locals.pageName === 'dashboard' ? ' aria-current=page ' : '' %>>Tableau de bord</a>
                        </li>
                        <li class="<%= locals.pageName === 'register' ? 'is-active ' : '' %>actions-nav_item">
                            <a href="/authentification/register" <%= locals.pageName === 'register' ? ' aria-current=page ' : '' %>>Créer un compte</a>
                        </li>
                        <li class="<%= locals.pageName === 'ajoutIngredient' ? 'is-active ' : '' %>actions-nav_item">
                            <a href="/ingredients/ajouter" <%= locals.pageName === 'ajoutIngredient' ? ' aria-current=page ' : '' %>>Ajouter un ingrédient</a>
                        </li>
                        <li class="<%= locals.pageName === 'ajoutRecette' ? 'is-active ' : '' %>actions-nav_item">
                            <a href="/recettes/ajouter" <%= locals.pageName === 'ajoutRecette' ? ' aria-current=page ' : '' %>>Ajouter une recette</a>
                        </li>
                        <li class="actions-nav_item actions-nav_logout">
                            <a href="/authentification/logout">Se déconnecter</a>
                        </li>
                        <li class="actions-nav_item actions-nav_username"><%= locals.user ? user.username : '' %></li>
                    <% } else { %> 
                    <li class="<%= locals.pageName === 'login' ? 'is-active ' : '' %>actions-nav_item">
                        <a href="/authentification/login" <%= locals.pageName === 'login' ? ' aria-current=page ' : '' %>>Se connecter</a>
                    </li>
                    <% } %> 
                </ul>
            </nav>
        </div>
    </div>
    <div class="container">
        <nav class="main-nav has-thick-border-bottom" aria-label="navigation principale">
            <div class="main-nav_logo is-mobile">
                <a href="/" <%= locals.pageName === 'accueil' ? ' aria-current=page ' : '' %>>
                    <img src="/img/cook-book-logo.svg" alt="Logo Cook Book by Fab" width="180" height="68">
                    <span>Accueil</span>
                </a>
            </div>
            <ul class="main-nav_container">
                <li class="<%= locals.pageName === 'ingredients' ? 'is-active ' : '' %>main-nav_item">
                    <a href="/ingredients" <%= locals.pageName === 'ingredients' ? ' aria-current=page ' : '' %>>Ingrédients</a>
                </li>
                <li class="main-nav_item main-nav_logo is-desktop">
                    <a href="/" <%= locals.pageName === 'accueil' ? ' aria-current=page ' : '' %>>
                        <img src="/img/cook-book-logo.svg" alt="Logo Cook Book by Fab" width="180" height="68">
                        <span>Accueil</span>
                    </a>
                </li>
                <li class="<%= locals.pageName === 'recettes' ? 'is-active ' : '' %>main-nav_item">
                    <a href="/recettes" <%= locals.pageName === 'recettes' ? ' aria-current=page ' : '' %>>Recettes</a>
                </li>
            </ul>
        </nav>
    </div>
</header>